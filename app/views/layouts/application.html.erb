      <div class="col-md-4">
        <% if current_user %>
          <i><%= current_user.role %></i>
          <%= current_user.name %> |
          <%= link_to "Log out", logout_path, method: "delete" %>
          <hr>
        <% else %> 
          <%= link_to "Login", 'login' %></a> |
          <%= link_to "Signup", 'signup' %></a>
